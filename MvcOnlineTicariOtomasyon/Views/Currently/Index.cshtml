@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Currently>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Cariler Sayfası</h2>
<br />
<table class="table table-striped">
    <tr>
        <th>CARİ ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>ŞEHİR</th>
        <th>MAİL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach(var current in Model)
            {
                <tr>
                    <td>@current.Id</td>
                    <td>@current.FirstName</td>
                    <td>@current.LastName</td>
                    <td>@current.City</td>
                    <td>@current.Mail</td>
                    <td><a href="/Currently/DeleteCurrently/@current.Id" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Currently/GetCurrently/@current.Id" class="btn btn-warning">Güncelle</a></td>
                    <td><a href="/Currently/CurrentlySale/@current.Id" class="btn btn-success">Detaylar</a></td>
                </tr>
            }
</table>
<a href="/Currently/AddCurrently/" class="btn btn-info">Yeni Cari Ekle</a>