@model MvcOnlineTicariOtomasyon.Models.Classes.CargoDetail
@{
    ViewBag.Title = "AddCargo";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br/>
<h2>Yeni Kargo Ekle</h2>
<br/>
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Code)
    <input type="text" name="Code" value="@ViewBag.code" class = "form-control" readonly />
    <br />
    @Html.LabelFor(x => x.Staff)
    @Html.TextBoxFor(x => x.Staff, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Buyer)
    @Html.TextBoxFor(x => x.Buyer, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.CargoDate)
    <input type="date" class="form-control" name="CargoDate" />
    <br />
    @Html.LabelFor(x => x.Statement)
    @Html.TextAreaFor(x => x.Statement, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
