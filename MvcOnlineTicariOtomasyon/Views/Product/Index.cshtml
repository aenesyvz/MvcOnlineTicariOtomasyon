@using MvcOnlineTicariOtomasyon.Models.Classes
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br/>
<h2>Ürünler</h2>
<br/>
<br/>
@using (Html.BeginForm("Index", "Product", FormMethod.Get)) { 
    <p>
        Ürün Adı: @Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-info"/>
    </p>
}
<br/>
<table class="table table-striped">
    <tr>
        
        <th>ÜRÜN ADI</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYATI</th>
        <th>SATIŞ FİYATI</th>
        <th>KATEGORİ</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>SATIŞ YAP</th>
    </tr>
    @foreach(var product in Model){ 
<tr>

    <td>@product.ProductName</td>
    <td>@product.Brand</td>
    <td>@product.UnitsInStock</td>
    <td>@product.PurchasePrice ₺</td>
    <td>@product.SalePrice ₺</td>
    <td>@product.Category.CategoryName</td>

    <td>
        <a href="/Product/DeleteProduct/@product.Id" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Product/GetProduct/@product.Id" class="btn btn-success">Güncelle</a>
    </td>
    <td>
        <a href="/Product/MakeSale/@product.Id" class="btn btn-default" style="background-color:indigo;color:white">Satış Yap</a>
    </td>
</tr>
    }
</table>

<a href="/Product/AddProduct/" class="btn btn-info">Yeni Ürün Ekle</a>
