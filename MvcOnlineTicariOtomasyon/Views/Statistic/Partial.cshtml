@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Classes.Group2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int sequence = 0;}
                @foreach (var x in Model)
                {
                <tr>
                    <td>@{sequence++; } @sequence</td>
                    <td>@x.Id</td>
                    <
                    <td>
                        @if (x.Total <= 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 33%"></div>
                            </div>
                        }
                        @if (x.Total <= 5 && x.Total > 3)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-warning" style="width: 55%"></div>
                            </div>
                        }
                        @if (x.Total <= 7 && x.Total > 5)
                        {
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-success" style="width: 77%"></div>
                            </div>
                        }


                    </td>
                    <td>
                        @if (x.Total <= 3)
                        {
                            <span class="badge bg-danger">@x.Total</span>
                        }
                        @if (x.Total <= 5 && x.Total > 3)
                        {
                            <span class="badge bg-warning">@x.Total</span>
                        }
                        @if (x.Total <= 7 && x.Total > 5)
                        {
                            <span class="badge bg-success">@x.Total</span>
                        }
                    </td>


                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>