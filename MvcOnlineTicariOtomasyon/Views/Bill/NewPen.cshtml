@model MvcOnlineTicariOtomasyon.Models.Classes.BillPen
@{
    ViewBag.Title = "NewPen";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kalem Girişi</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Statement)
    @Html.TextBoxFor(x => x.Statement, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Total)
    @Html.TextBoxFor(x => x.Total, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BillId)
    @Html.TextBoxFor(x => x.BillId, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>

